<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/upgrade_dialog_wrapper"
        android:background="@drawable/background_with_corner"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/upgrade_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发现新版本"
            android:paddingLeft="@dimen/dp_40"
            android:paddingRight="@dimen/dp_40"
            android:gravity="center"
            android:textColor="@color/commonTextColorGrayColor_3"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:lineSpacingExtra="5dp"
            />
        <com.daimajia.numberprogressbar.NumberProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:progress_current="0"
            app:progress_max="100"
            app:progress_text_size="@dimen/sp_18"
            android:visibility="invisible"
            android:id="@+id/upgrade_dialog_progressBar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/commonLineColor"
            android:layout_marginTop="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_with_corner_in_bottom"
            android:weightSum="2"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/upgrade_dialog_neg_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="下次再说"
                android:textColor="@color/commonTextColorGrayColor_6"
                android:textSize="@dimen/text_size_18sp"
                android:gravity="center"
                android:background="@color/white"
                android:paddingTop="11dp"
                android:paddingBottom="12dp"
                android:paddingLeft="@dimen/dp_40"
                android:paddingRight="@dimen/dp_40"
                />
            <TextView
                android:id="@+id/upgrade_dialog_pos_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginLeft="0.5dp"
                android:paddingTop="11dp"
                android:textSize="@dimen/text_size_18sp"
                android:paddingBottom="12dp"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="@dimen/dp_40"
                android:paddingRight="@dimen/dp_40"
                android:text="立即更新"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>